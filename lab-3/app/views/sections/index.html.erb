<p id="notice"><%= notice %></p>

<h1>Sections</h1>

<table>
  <thead>
    <tr>
      <th>Section number</th>
      <th>Class number</th>
      <th>Time</th>
      <th>Day</th>
      <th>Location</th>
      <th>Component</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.section_number %></td>
        <td><%= section.class_number %></td>
        <td><%= section.time %></td>
        <td><%= section.day %></td>
        <td><%= section.location %></td>
        <td><%= section.component %></td>
        <td><%= section.start_date %></td>
        <td><%= section.end_date %></td>
        <td><%= section.course_id %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

