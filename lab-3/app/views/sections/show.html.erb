<p id="notice"><%= notice %></p>

<p>
  <strong>Section number:</strong>
  <%= @section.section_number %>
</p>

<p>
  <strong>Class number:</strong>
  <%= @section.class_number %>
</p>

<p>
  <strong>Component:</strong>
  <%= @section.component %>
</p>

<p>
  <strong>Start date:</strong>
  <%= @section.start_date %>
</p>

<p>
  <strong>End date:</strong>
  <%= @section.end_date %>
</p>

<p>
  <strong>Course:</strong>
  <%= @section.course_id %>
</p>

<p>
  <strong>Id:</strong>
  <%= @section.id %>
</p>


<table>
  <thead>
    <tr>
      <th>Start time</th>
      <th>End time</th>
      <th>Monday</th>
      <th>Tuesday</th>
      <th>Wednesday</th>
      <th>Thursday</th>
      <th>Friday</th>
      <th>Saturday</th>
      <th>Sunday</th>
      <th>Location</th>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @section.meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.start_time %></td>
        <td><%= meeting.end_time %></td>
        <td><%= meeting.monday %></td>
        <td><%= meeting.tuesday %></td>
        <td><%= meeting.wednesday %></td>
        <td><%= meeting.thursday %></td>
        <td><%= meeting.friday %></td>
        <td><%= meeting.saturday %></td>
        <td><%= meeting.sunday %></td>
        <td><%= meeting.location %></td>
        <td><%= meeting.sections_id %></td>
        <td><%= link_to 'Show', meeting %></td>
        <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
        <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_section_path(@section) %> |
<%= link_to 'Back', sections_path %>
