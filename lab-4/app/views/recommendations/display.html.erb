
<h1>Recommendations</h1>

<%# display recommendations in a table %>
<table>

  <thead>
    <tr>
      <th>Instructor Name</th>
      <th>Grader Name</th>
      <th>Grader Name.#</th>
      <th>Course Number</th>
      <th>Class Number</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%# Display information about each recommendation %>
    <% @recommendations.each do |recommendation| %>
      <tr>
        <td><%= recommendation.instructor_name %></td>
        <td><%= recommendation.grader_name %></td>
        <td><%= recommendation.grader_name_dot_number %></td>
        <td><%= recommendation.course_number %></td>
        <td><%= recommendation.class_number %></td>
        <td><%= recommendation.comments %></td>

        <%# edit an delete options to edit a recommendation or delete a recommendation %>
        <td><%= link_to 'Edit', recommendations_edit_path(:recommendation_id => recommendation.id) %></td>
        <td><%= link_to 'Delete', recommendations_delete_path(:recommendation_id => recommendation.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

